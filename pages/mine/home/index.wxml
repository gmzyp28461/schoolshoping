<!--pages/mine/index.wxml-->

<view class="UCenter-bg bg-gradual-pink" >

<view class="cu-avatar xl round " style="background-image:url({{userInfo.avatar}});"></view>
  <view class="text-xl" style="margin-top: 10px;">{{userInfo.userName}}
  </view>
</view>
<van-toast id="van-toast" />
<van-grid column-num="4">
<van-grid-item icon="orders-o" text="全部" bind:click="order" data-title="全部订单"/>
<!--   <van-grid-item icon="debit-pay" text="待支付"  bind:click="order" data-title="待支付"/> -->
<van-grid-item icon="send-gift-o" text="待发货"  bind:click="order" data-title="待发货"/>
<van-grid-item icon="shop-o" text="待收货"  bind:click="order" data-title="待收货"/>
<van-grid-item icon="other-pay" text="已完成"  bind:click="order" data-title="已完成"/>
</van-grid>

<van-cell title="我的收藏" icon="star-o" is-link  bind:click="collect"/>

<van-cell title="我的评论" icon="comment-o" is-link  bind:click="comment"/>

<van-cell  title="合伙人" icon="diamond-o" is-link  bind:click="vip"/>

<van-cell wx:if="{{userInfo.userType=='02'}}" title="我的佣金" icon="balance-pay" is-link  bind:click="balance"/>

<van-button plain hairline type="primary" block custom-class="buttonClass" bind:click="logout">退出登录</van-button>
