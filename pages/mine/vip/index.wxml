<!--pages/mine/vip/index.wxml-->
<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">合伙人申请</view>
</cu-custom>
<van-toast id="van-toast" />
<van-cell-group wx:if="{{info==null||info.status==30}}">
  <van-field
    model:value="{{ userName }}"
    required
    clearable
    label="姓名"
    placeholder="请输入姓名"
  />
  <van-field
  model:value="{{ phoneNum }}"
    required
    clearable
    label="手机号"
    placeholder="请输入手机号码"
  />
  <van-field
  model:value="{{ content }}"
    label="理由"
    required
    type="textarea"
    placeholder="请输入申请理由"
    autosize
    border="{{ false }}"
  />


  <van-field
  wx:if="{{info!=null&&info.status==30}}"
    value="审核未通过"
    label="状态"
    disabled
  />

</van-cell-group>



<van-cell-group wx:if="{{info!=null&&info.status<30}}">
  <van-field
    value="{{ info.userName }}"
    clearable
    readonly
    label="姓名"
    placeholder="请输入姓名"
  />
  <van-field
    value="{{ info.phoneNum }}"
    clearable
    readonly
    label="手机号"
    placeholder="请输入手机号码"
  />

  <van-field
    value="{{ info.discount }}%"
    clearable
    readonly
    label="折扣"
  />

  <van-field
    value="{{ info.ratio }}%"
    clearable
    readonly
    label="提成比例"
  />

  <van-field
    value="{{ info.content }}"
    label="理由"
    type="textarea"
    placeholder="请输入申请理由"
    autosize
    readonly
    border="{{ false }}"
  />
  <van-field
  wx:if="{{info.status==20}}"
    value="{{ info.user.inviteCode }}"
    label="合伙码"
    readonly
  />
  <van-field
  wx:if="{{info.status==10}}"
    value="待审核"
    label="状态"
    disabled
  />

</van-cell-group>



<van-button wx:if="{{info==null||info.status==30}}" plain hairline type="primary" block custom-class="buttonClass" bind:click="subInfo">提交申请</van-button>
